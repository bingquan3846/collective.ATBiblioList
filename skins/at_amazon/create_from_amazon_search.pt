<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="atamazon">

<metal:head fill-slot="top_slot"
            tal:define="dummy python:request.set('disable_border',1)" />

<div metal:fill-slot="main">

    <h1 i18n:translate="search_amazon">Search Amazon</h1>

  	<form action="search_amazon"
          method="post"
          name="search_amazon"
          tal:define="DateTime python:modules['DateTime'].DateTime">

        <fieldset>

            <legend i18n:translate="legend_search_terms">Search Terms</legend>

            <div class="field">
                <label for="author" i18n:translate="label_search_author">Author</label>

                <div class="formHelp" i18n:translate="help_search_author">
                Enter the author's name here.
                </div>

                <input type="text"
                       id="author"
                       name="author"
                       size="50"
                       tabindex=""
                       tal:attributes="tabindex tabindex/next;"
                       />
            </div>

            <div class="field">
                <label for="title" i18n:translate="label_search_title">Title</label>

                <div class="formHelp" i18n:translate="help_search_title">
                Enter the book's title here.
                </div>

                <input type="text"
                       id="title"
                       name="title"
                       size="50"
                       tabindex=""
                       tal:attributes="tabindex tabindex/next;"
                       />
            </div>
            <div class="field">
                <label for="subject" i18n:translate="label_search_subject">Subject</label>

                <div class="formHelp" i18n:translate="help_search_subject">
                Enter the book's subject here.
                </div>

                <input type="text"
                       id="subject"
                       name="subject"
                       size="50"
                       tabindex=""
                       tal:attributes="tabindex tabindex/next;"
                       />
            </div>
            <div class="field">
                <label for="isbn" i18n:translate="label_search_isbn">ISBN</label>

                <div class="formHelp" i18n:translate="help_search_isbn">
                Enter the book's ISBN number here.
                </div>

                <input type="text"
                       id="isbn"
                       name="isbn"
                       size="30"
                       tabindex=""
                       tal:attributes="tabindex tabindex/next;"
                       />
            </div>
            <div class="field">
                <label for="isbn" i18n:translate="label_search_isbn">ISBN</label>

                <div class="formHelp" i18n:translate="help_search_isbn">
                Enter the book's ISBN number here.
                </div>

                <input type="text"
                       id="isbn"
                       name="isbn"
                       size="30"
                       tabindex=""
                       tal:attributes="tabindex tabindex/next;"
                       />
            </div>
            <div class="field">
                <label for="publisher" i18n:translate="label_search_publisher">Publisher</label>

                <div class="formHelp" i18n:translate="help_search_publisher">
                Enter the book's publisher here.
                </div>

                <input type="text"
                       id="publisher"
                       name="publisher"
                       size="50"
                       tabindex=""
                       tal:attributes="tabindex tabindex/next;"
                       />
            </div>
            <div class="formControls">
                <input class="context"
                       tabindex=""
                       type="submit"
                       name="submit"
                       value="Search"
                       i18n:attributes="value"
                       tal:attributes="tabindex tabindex/next;"
                       />
            </div>

        </fieldset>
    
    </form>

</div>
</html>